//====================================== 返回农历 y年的总天数
function jq_lYearDays(y) {
	var i, sum = 348;
	for(i=0x8000; i>0x8; i>>=1) {sum += (jq_lunarInfo[y-1900] & i)? 1: 0;}
	return(sum+jq_leapDays(y));
}

//====================================== 返回农历 y年闰月的天数
function jq_leapDays(y) {
	if(jq_leapMonth(y))  return((jq_lunarInfo[y-1900] & 0x10000)? 30: 29);
	else return(0);
}

//====================================== 返回农历 y年闰哪个月 1-12 , 没闰返回 0
function jq_leapMonth(y) {
	return(jq_lunarInfo[y-1900] & 0xf);
}

//====================================== 返回农历 y年m月的总天数
function jq_monthDays(y,m) {
	return( (jq_lunarInfo[y-1900] & (0x10000>>m))? 30: 29 );
}


//====================================== 算出农历, 传入日期控件, 返回农历日期控件
//                                       该控件属性有 .year .month .day .isLeap
function jq_Lunar(objDate) {
	var i, leap=0, temp=0;
	var offset   = (Date.UTC(objDate.getFullYear(),objDate.getMonth(),objDate.getDate()) - Date.UTC(1900,0,31))/86400000;
	for(i=1900; i<2050 && offset>0; i++) { temp=jq_lYearDays(i); offset-=temp; }
	if(offset<0) { offset+=temp; i--; }
	this.year = i;
	leap = jq_leapMonth(i); //闰哪个月
	this.isLeap = false;
	for(i=1; i<13 && offset>0; i++) {
		//闰月
		if(leap>0 && i==(leap+1) && this.isLeap==false){ --i; this.isLeap = true; temp = jq_leapDays(this.year); }
		else{ temp = jq_monthDays(this.year, i); }
		//解除闰月
		if(this.isLeap==true && i==(leap+1)) {this.isLeap = false;}
		offset -= temp;
	}
	if(offset==0 && leap>0 && i==leap+1){
		if(this.isLeap){ this.isLeap = false; }
		else{ this.isLeap = true; --i; }
	}
	if(offset<0){ offset += temp; --i; }
	this.month = i;
	this.day = offset + 1;
}
//===== 某年的第n个节气为几日(从0小寒起算)
function jq_sTerm(y,n) {
	var offDate = new Date( ( 31556925974.7*(y-1900) + jq_sTermInfo[n]*60000  ) + Date.UTC(1900,0,6,2,5) );
	return(offDate.getUTCDate());
}
function jq_getRecentTerm(){
	var nowDate = new Date(),temp=null;
	var y=nowDate.getFullYear();
	for(var i=0;i<24;i++){
		var m=Math.round((i-1)/2),d=jq_sTerm(y,i);
		var objDate = new Date(y,m,d);
		if (objDate-nowDate>=-24*60*60*1000){
			temp=i;
			return {"date":objDate,"i":i};
		}
	}
	if (temp==null){
		y=y+1;
		var objDate=new Date(y,0,jq_sTerm(y,0));
		return {"date":objDate,"i":0};
	}
}
function jq_getTermInfo(){
	var str="",nowDate=new Date();
	var objTerm=jq_getRecentTerm();
	var dateTerm=objTerm.date;
	var iTerm=objTerm.i;
	var lTerm=new jq_Lunar(dateTerm);
	var timer=Math.floor((dateTerm-nowDate)/(24*60*60*1000))+1;
