<?xml version="1.0" encoding="utf-8"?>
<Module>
<ModulePrefs title="优酷推荐视频" description="显示优酷的推荐视频" author="mynon" author_affiliation="www.mynon.cn" author_link="http://www.mynon.cn" height="200" scaling="false">
	<Require feature="dynamic-height"/>
</ModulePrefs>
<Content type="html">
<![CDATA[
<style type="text/css">
.wd{padding:2px 0;font-size:12px;}
</style>
<script type="text/javascript">
function showWData(data){
	var data=eval('('+data+')');
	var div = document.getElementById("mn_30");
	var htmlCode='';
	if(data.u && data.t){
		var htmlCode = '<img style="margin-bottom:-3px;width:16px;height:16px;" src="'+unescape(data.i)+'" /> <a href="http://www.mynon.cn/files/bk_click.php?id=m_'+data.w+'&uid='+unescape(data.u)+'" target="_blank">'+unescape(data.t)+'</a>';
		div.innerHTML=htmlCode;
	}else{
		div.style.display="none";
	}
	_IG_AdjustIFrameHeight();
}
function getWData(wid) {
	var url='http://www.mynon.cn/widget/data/interlink/tianya/'+wid+'/json';
	_IG_FetchContent(url, showWData, {refreshInterval:0});
}
function initWData() {
	var wid=30;
	getWData(wid);
}
_IG_RegisterOnloadHandler(initWData);
</script>
<iframe width="100%" height="165" allowTransparency="true" align="middle" scrolling="no" frameborder="0" src="http://www.mynon.cn/lt/img_youku/list_ykv.php"></iframe>
<div id="mn_30" class="wd"></div>
]]>
</Content>
</Module>