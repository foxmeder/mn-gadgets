<?xml version="1.0" encoding="utf-8"?>
<Module>
<ModulePrefs title="每日学口语" description="每天学一句英语口语,鼠标放在喇叭图标上可以收听读音" author="迈弄" author_affiliation="迈弄" author_link="http://www.mynon.cn" height="40" scaling="false">
	<Require feature="dynamic-height"/>
</ModulePrefs>
<Content type="html">
<![CDATA[
<style type="text/css">
div,span{font-size:12px;}
.wd{padding:2px 0;font-size:12px;}
</style>
<script type="text/javascript">
function showWData(data){
	var data=eval('('+data+')');
	var div = _gel("mn_103");
	var htmlCode='';
	if(data.u && data.t){
		var htmlCode = '<img style="margin-bottom:-3px;width:16px;height:16px;" src="'+unescape(data.i)+'" /> <a href="http://www.mynon.cn/files/bk_click.php?id=m_'+data.w+'&uid='+unescape(data.u)+'&f=os_ty" target="_blank">'+unescape(data.t)+'</a>';
		div.innerHTML=htmlCode;
	}else{
		div.style.display="none";
	}
	_IG_AdjustIFrameHeight();
}
function getWData(wid) {
	var url='http://www.mynon.cn/widget/data/interlink/tianya/'+wid+'/json';
	_IG_FetchContent(url, showWData, {refreshInterval:0});
}
function initWData() {
	var wid=103;
	getWData(wid);
}
_IG_RegisterOnloadHandler(initWData);
</script>
<span id="dict_daily">
<a href="http://dict.cn/" target="_blank">Dict.CN 在线词典, 英语学习, 在线翻译</a>
</span> 
<script language="JavaScript" src="http://dict.cn/daily.php" defer="defer">
</script>
<div id="mn_103" class="wd"></div>
]]>
</Content>
</Module>